<Window x:Class="GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid Loaded="MainWindow_Loaded">
        <Button x:Name="SinglePlayerButton" Content="SinglePlayer" HorizontalAlignment="Left" Height="52" Margin="185,42,0,0" VerticalAlignment="Top" Width="127" Click="SinglePlayerButton_Click"/>
        <Button x:Name="MultiPlayerButton" Content="MultiPlayer" HorizontalAlignment="Left" Height="52" Margin="185,112,0,0" VerticalAlignment="Top" Width="127" Click="MultiPlayerButton_Click"/>
        <Button x:Name="SettingsButton" Content="Settings" HorizontalAlignment="Left" Height="52" Margin="185,183,0,0" VerticalAlignment="Top" Width="127" Click="SettingsButton_Click" />

    </Grid>
</Window>
